{
  "name": "extension",
  "displayName": "Learnor - AI Teacher",
  "version": "0.0.1",
  "description": "Save any webpage and turn it into an AI teacher for voice learning",
  "private": true,
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "clean": "rm -rf .plasmo build node_modules .turbo"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.9.0",
    "convex": "^1.17.0",
    "lucide-react": "^0.460.0",
    "plasmo": "^0.88.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  },
  "manifest": {
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "https://*.clerk.accounts.dev/*",
      "https://*.convex.cloud/*"
    ]
  }
}

